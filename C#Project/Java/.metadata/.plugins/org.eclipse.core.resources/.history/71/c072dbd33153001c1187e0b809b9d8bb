package cn.jbit;

import java.util.Scanner;

public class Ye4 {
	int sum;
	public void show(){
		Scanner input = new Scanner(System.in);
		System.out.println("请输入4位的会员卡号:");
		int num = input.nextInt();
		System.out.println("会员卡号是:" + num);
		int qianwei = num/1000;
		int baiwei = num/100%10;
		int shiwei = num/10%10;
		int gewei = num%10;
		System.out.print("千位数:" + qianwei + "，");
		System.out.print("百位数:" + baiwei + "，");
		System.out.print("十位数:" + shiwei + "，");
		System.out.print("个位数:" + gewei);
		sum = qianwei + baiwei + shiwei + gewei;
		System.out.println("会员卡号" + num + "各位之和:" + sum);
	}
}

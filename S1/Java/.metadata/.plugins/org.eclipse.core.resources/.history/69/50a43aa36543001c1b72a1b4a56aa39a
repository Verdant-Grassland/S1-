package cn.jbit;

import java.util.Scanner;

public class TestKey {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		System.out.println("――――――更新记录的钥匙码――――――");
		char[] Agrey = new char[5];
		long key = 0;
		for(int i = 0 ; i<Agrey.length ; i++){
			System.out.println("输入您的目前第" + (i + 1) + "钥匙码:");
			Agrey[i] = input.next().charAt(0);
			key = (char) (key + Agrey[i]);
		}
		System.out.println("\n记录\t\t钥匙码");
		for(int i = 0 ; i<Agrey.length ; i++){
			System.out.println((i + 1) + "\t\t" + Agrey[i]);
		}
	}
}

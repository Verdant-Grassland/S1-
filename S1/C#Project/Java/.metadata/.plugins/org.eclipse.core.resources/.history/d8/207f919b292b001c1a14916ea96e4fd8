package cn.jbit;
import java.util.Scanner;




public class ZY1 {
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner input = new Scanner(System.in);
		System.out.println("STB的成绩是：");
		int stb=input.nextInt();
		System.out.println("输入java成绩");
		int java=input.nextInt();
		System.out.println("输入sq1成绩");
		int sq1=input.nextInt();
		System.out.println("------------------");
		System.out.println("STB\tjava\tsql");
		System.out.println(stb+"\t"+java+"\t"+sq1);
		
		
		System.out.println("-------------------");
		int diffen=java-sq1;
		double avg=(stb+java+sq1)/3;
		System.out.println("java和sq1之差："+diffen);
		System.out.println("平均分是"+avg);
		
		
		
	}
}

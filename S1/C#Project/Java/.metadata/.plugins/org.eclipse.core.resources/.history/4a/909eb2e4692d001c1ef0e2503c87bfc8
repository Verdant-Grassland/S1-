package CN.jbit;

import java.util.Scanner;

public class shop {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("请输入是否是会员：是（y）/否（n）");
		Scanner input=new Scanner(System.in);
		String hui=input.next();
		System.out.println("请输入会员金额");
		double zhe=input.nextDouble();
		if(hui.equals("y")){
			if(zhe>=200){
				zhe=zhe*0.75;
			}else{
				zhe=zhe*0.8;
			}
		}else{
			if(zhe>=100)
			zhe=zhe*0.9;
			System.out.println("实际支付："+zhe);
		}
		
		
	}

}

package cn.jbit;

import java.util.Scanner;

public class Myshopping {
	
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		String answer = "y";	
		int shirtPrice = 245;
		int shoePrice = 570;
		int padPrice = 320;
		int shirtNo = 2;
		int shoeNo =1;
		int padNo = 1; 
		while(answer.equals("y"))
		System.out.println("*******************************************");
		System.out.println("请选择购买的商品编号：");
		System.out.println("1.T恤        2.网球鞋        3.网球拍");
		System.out.println("*******************************************");
		
		System.out.println("请输入商品编号:");
		int num = input.nextInt();
		switch(num){
		case 1:
			System.out.println("T恤 \t￥"+shirtPrice);
			break;
		case 2:
			System.out.println("网球鞋\t￥"+padPrice);
			break;
		case 3:
			System.out.println("网球拍 \t￥"+padPrice);
			break;
		default:
			System.out.println("没有此菜单项");
			break;
		}
		System.out.println("是否继续(y/n)");
		answer = input.next();
	}
	System.out.println("程序结束！");
}
